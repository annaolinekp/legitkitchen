heartContainer = document.getElementById("heart_container_<%= @recipe.id %>");
showContainer = document.getElementById("heart_container_<%= @recipe.id %>_show");
if(heartContainer) {
  heartContainer.innerHTML = `<%= link_to saved_recipe_path(@saved_recipe), method: :delete, remote: true  do %>
<i id='heart_<%= @recipe.id %>' class='fas fa-heart heart-icon2' style='color:#5e9bb9;'></i>
<% end %>`;
} else {
  showContainer.innerHTML = `<%= link_to saved_recipe_path(@saved_recipe), method: :delete, remote: true  do %>
<i id='heart_<%= @recipe.id %>' class='fas fa-heart heart' style='color:#5e9bb9;'></i>
<% end %>`;
}

