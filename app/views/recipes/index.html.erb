<div class="main-container">
<%= link_to 'Starter', recipes_path(category: 'Starter')  %>
<%= link_to 'Main', recipes_path(category: 'Main')  %>
<%= link_to 'Dessert', recipes_path(category: 'Dessert')  %>
<%= link_to 'Drink', recipes_path(category: 'Drink')  %>
  <h1>Recipes</h1>
  <div class="card-container">
    <ul>
      <% @recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe_path(recipe) %></li>
        <li><%= recipe.description%></li>
        <%= cl_image_tag recipe.picture_url, height: 300, dpr: 3.0, width: 400, crop: :fill %>
        <% if current_user %>
          <% if current_user.id == recipe.user.id %>
            <%= link_to 'Delete recipe?', recipe_path(recipe), method: :delete, data: { confirm: "Are you sure?" }%>
             <li><%= link_to 'Create a recipe', new_recipe_path %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>



<%= form_tag(recipes_path, method: :get) do %>

  <%= select_tag(:category, options_for_select([['Main', 'Main'], ['Starter', 'Starter'], ['Dessert', 'Dessert'], ['Drink', 'Drink']]))%>
  <%= select_tag(:dietary_requirements, options_for_select([['Vegetarian', 'Vegetarian'], ['Vegan', 'Vegan'], ['Halal', 'Halal'], ['Gluten Free', 'Gluten Free'], ['Lactose Intolerant', 'Lactose Intolerant']]))%>
  <%= button_tag("Add", type: "submit") %>
<% end %>



