<div class="main-container">
  <h1>Recipes</h1>
  <div class="card-container">
    <ul>
      <% @recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe_path(recipe) %></li>
        <li><%= recipe.description%></li>
        <li><%= recipe.picture_url%></li>
        <% if curent_user == @user.recipe %>
          <%= link_to 'Delete recipe?', recipe_path(recipe), method: :delete, data: { confirm: "Are you sure?" }%>
           <i class="fa fa-trash destroy_recipe"></i>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
